@model SR.Application.Contract.Organization.CreateOrganization
@{
    ViewBag.Title = "CreateOrganization";
}
<h5 class="text-center mt-2 p-2">ایجاد سازمان جدید</h5>

@{
    ViewBag.Title = "ایجاد سازمان ";
  

}


<div class="row">
    <div class="col-md-12">
        <form class=" mb-5 row" method="post">
            @Html.AntiForgeryToken()
            <div class="card  col-md-6 mx-auto ">
                <div class="card-header">
                    اطلاعات سازمان
                </div>
                <div class="card-body">

                    <div class="form-horizontal">
                        <h4></h4>

                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-group">
                            @Html.LabelFor(model => model.Code, htmlAttributes: new { @class = "control-label  " })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.Code, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Code, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label  " })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.Address, htmlAttributes: new { @class = "control-label  " })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.Address, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.PhoneNumber, htmlAttributes: new { @class = "control-label  " })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.PhoneNumber, new { htmlAttributes = new { @class = "form-control", placeholder = "01234567891" } })
                                @Html.ValidationMessageFor(model => model.PhoneNumber, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.Website, htmlAttributes: new { @class = "control-label  " })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.Website, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Website, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <hr />


                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="ثبت" class="btn btn-block btn-outline-success" />
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <p>
                        <i class="fa fa-warning text-info"></i>نام غیر تکراری برای سازمان انتخاب کنید و بر روی گزینه ثبت کلیک کنید
                    </p>
                </div>
            </div>

        </form>


    </div>


</div>




<div>
    @Html.ActionLink("برگشت به لیست", "Index")
</div>

@section Scripts {
    <script>


        //Open userManagerMenu && active userManagerMenuTitle
        let userManagerMenu = document.getElementById("OrganizationManagerMenu");
        userManagerMenu.classList.add("menu-open");

        let userManagerMenuTitle = document.getElementById("OrganizationManagerMenuTitle");
        userManagerMenuTitle.classList.add("active")

        let userSubmenu = document.getElementById("OrganizationSubmenu");
        userSubmenu.classList.add("active");


    </script>
    @Scripts.Render("~/bundles/jqueryval")
}


